{
  "private": true,
  "name": "nuxt3-basic-boilerplate",
  "version": "0.1.0",
  "description": "A basic Nuxt 3 boilerplate. Nuxt 3 + Pinia + Typescript + TailwindCSS 3.",
  "repository": {
    "type": "git",
    "url": "git://github.com/arnnied/nuxt3-basic-boilerplate"
  },
  "author": "ArnNied",
  "license": "MIT",
  "scripts": {
    "es": "eslint . --ext .vue,.js,.ts",
    "tc": "nuxi typecheck",
    "estc": "yarn es; yarn tc",
    "dev": "yarn es --fix && yarn tc && nuxi dev",
    "build": "nuxi build",
    "preview": "nuxi preview",
    "start": "node .output/server/index.mjs"
  },
  "devDependencies": {
    "@nuxt/postcss8": "^1.1.3",
    "@pinia/nuxt": "^0.1.8",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.13.0",
    "eslint-plugin-vue": "^8.6.0",
    "nuxt": "3.0.0-rc.1",
    "pinia": "^2.0.13",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.3",
    "vue-tsc": "^0.34.8"
  }
}
